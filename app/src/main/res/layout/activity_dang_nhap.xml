<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.phamvolan.finalone.activity.DangNhapActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MÀN HÌNH ĐĂNG NHẬP"
                    android:textColor="#00a680"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtusername"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/demo"
                    android:drawablePadding="15dp"
                    android:hint="Nhập username" />

                <EditText
                    android:id="@+id/edtpassword"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/key"
                    android:drawablePadding="15dp"
                    android:hint="Nhập password"
                    android:inputType="textPassword" />


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:weightSum="2">

                    <ru.katso.livebutton.LiveButton
                        android:id="@+id/btnDangNhap"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Đăng nhập"
                        android:textColor="#0b0b0b"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:backgroundColor="#ffcc00"
                        app:corners="0sp"
                        app:normalHeight="5dp"
                        app:pressedHeight="2dp"
                        app:shadowColor="#b7bac9" />

                    <ru.katso.livebutton.LiveButton
                        android:id="@+id/btnHuy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Hủy"
                        android:textColor="#0b0b0b"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        app:backgroundColor="#ffcc00"
                        app:corners="0sp"
                        app:normalHeight="5dp"
                        app:pressedHeight="2dp"
                        app:shadowColor="#b7bac9" />

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:background="#fae27f"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/deleteuser"
                    android:drawablePadding="15dp"
                    android:text="Xóa tài khoản"
                    android:textColor="#0a0a09"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:id="@+id/txtxoatk"

                    android:layout_height="wrap_content" />

            </LinearLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>
